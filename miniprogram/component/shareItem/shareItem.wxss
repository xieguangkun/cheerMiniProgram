/* miniprogram/component/shareItem/shareItem.wxss */
.share-item{
  width: 100%;
  height: auto;
  background-color: white;
  padding: 20rpx 0;
  margin: 30rpx 0;
}

.share-top{
  padding: 20rpx; 
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: flex-start;
}

.share-top image{
  height: 50rpx;
  width:50rpx;
  border-radius: 50%;
}

.share-top-show{
  height: 50rpx;
  width: 100%;
}

.share-top-show .username{
  margin-left:10rpx; 
  font-size: 24rpx;
  color: #1E90FF;
}

.share-top-show .userdate{
  margin-left:10rpx; 
  font-size: 14rpx;
  color: #A9A9A9;
}

.share-text{
  margin-left:30rpx;
  font-size: 24rpx;
}

.share-photos{
  display: flex;
  padding: 10rpx 30rpx;
  justify-content: flex-start;
  flex-wrap: wrap;
 
}

.share-photos image{
  width: 31.5%;
  height: 220rpx;
  margin:5rpx;
}

.share-imp{
height: 30rpx;
display: flex;
padding: 0 30rpx;
justify-content: space-between;
}

.share-imp .share-look{
  font-size: 24rpx;
  width: auto;
  height: 30rpx;
  color: #D3D3D3;
  }

.share-imp .share-intr{
  width: 100rpx;
  height: 30rpx;
  display: flex;
  justify-content: flex-end;
}

.share-intr image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

.line{
margin: 10rpx 30rpx;
height: 2rpx;
background-color: gray;
}

.love-items{
  width: 100%;
  margin-top:10rpx; 
  height: auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding:0 25rpx;
}

.love-items image{
  width: 26rpx;
  height: 26rpx;
  margin:0 5rpx;
}

.love-items text{
  font-size: 24rpx;
  color: #6495ED;
}

.comments{
  margin-top:10rpx;
  padding: 0 30rpx; 
}

.comments .commentview{
  font-size:24rpx;
  margin-top:5rpx;  
}

span{
  color: #1E90FF;
}

.comments .more{
  margin-top:5rpx; 
  font-size:19rpx;
  color: #1E90FF;
}

