/* component/commItem/commItem.wxss */
 
.comm-top{
 
  padding: 20rpx; 
 
  width: 100%;
 
  height: 100rpx;
 
  display: flex;
 
  justify-content: flex-start;
 
}
 

 
.comm-top image{
 
  height: 50rpx;
 
  width:50rpx;
 
  border-radius: 50%;
 
}
 

 
.comm-top-show{
 
  height: 50rpx;
 
  width: 100%;
 
}
 

 
.comm-top-show .comm-username{
 
  margin-left:10rpx; 
 
  font-size: 24rpx;
 
  color: #1E90FF;
 
}
 

 
.comm-top-show .comm-userdate{
 
  margin-left:10rpx; 
 
  font-size: 14rpx;
 
  color: #A9A9A9;
 
}
 

 
.comm-top-show .comment{
 
  margin-left:10rpx; 
 
  font-size: 24rpx;
 
  margin-top:10rpx; 
 
}
 

 
.comm-line{
 
margin: 10rpx 30rpx;
 
height: 2rpx;
 
background-color: gray;
 
}