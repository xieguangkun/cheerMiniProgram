/* miniprogram/pages/details/details.wxss */
 
.detail-all{
 
  width: 100%;
 
  background-color: white;
 
  padding: 20rpx 0;
 
  
 
}
 

 
.detail-top{
 
  padding:20rpx; 
 
  width: 100%;
 
  height: 60rpx;
 
  display: flex;
 
  justify-content: flex-start;
 
}
 

 
.detail-top image{
 
  height: 50rpx;
 
  width:50rpx;
 
  border-radius: 50%;
 
}
 

 
.detail-top-show{
 
  height: 50rpx;
 
  width: 100%;
 
}
 

 
.detail-top-show .username{
 
  margin-left:10rpx; 
 
  font-size: 24rpx;
 
}
 

 
.detail-top-show .userdate{
 
  margin-left:10rpx; 
 
  font-size: 14rpx;
 
  color: #A9A9A9;
 
}
 

 

 

 

 
.detail-text{
 
  margin-left:30rpx;

  margin-bottom: 20rpx;
 
  font-size: 24rpx;
 
}
 

 
.detail-photos{
 
  text-align: center;
 
  margin-top:50rpx; 
 
   width: 100%;
 
}
 

 
.detail-photos image{
 
  padding: 0 10rpx;
 
  height: 600rpx;
 
  margin-bottom: 20rpx;
 
}
 

 
.detail-imp{
 
height: 30rpx;
 
display: flex;
 
padding: 0 30rpx;
 
justify-content: space-between;
 
}
 

 
.detail-imp .detail-look{
 
  font-size: 24rpx;
 
  width: auto;
 
  height: 30rpx;
 
  color: #D3D3D3;
 
  }
 

 
.detail-imp .detail-intr{
 
  width: 100rpx;
 
  height: 30rpx;
 
  display: flex;
 
  justify-content: flex-end;
 
}
 

 
.detail-intr image{
 
  width: 30rpx;
 
  height: 30rpx;
 
  margin-left: 10rpx;
 
}
 

 
.line{
 
margin: 10rpx 30rpx;
 
height: 2rpx;
 
background-color: gray;
 
}
 

 
.loving-items{
 
  width: 100%;
 
  margin-top:10rpx; 
 
  height: auto;
 
  display: flex;
 
  justify-content: flex-start;
 
  align-items: center;
 
  padding:0 25rpx;
 
}
 

 
.loving-items image{
 
  width: 26rpx;
 
  height: 26rpx;
 
  margin:0 5rpx;
 
}
 

 
.loving-items view{
 
  font-size: 24rpx;

 
}
 

 
.detail-comm{
 
  margin: 10rpx 0;
 

 
}
 

 
.detail-divide{
 
  width: 100%;
 
  height: 60rpx;
 
   background:     #E8E8E8;
 
   margin-top:30rpx; 
 
}
 

 
.model {
 
  position: fixed;
 
  width: 100vw;
 
  height: 100vh;
 
  top: 0;
 
  bottom: 0;
 
  background: rgba(0, 0, 0, 0.2);
 
  z-index: 101;
 
}
 

 

 

 
.input-box {
 
  position: absolute;
 
  background-color: #f8f8f8;
 
  padding: 30rpx;
 
  padding-bottom: 130rpx;
 
  bottom: 0;
 
  left: 0;
 
  right: 0;
 
  z-index: 101;

  background: #FFFFCC;
 
}
 

 
.textarea {
  border-radius: 20rpx;

  background-color: #fff;
 
  width: 100%;
 
  padding: 5rpx;
 
  height: 3.3em;
 
  font-size: 15px;
 
  position: static;
 
}
 

 
.send {
  background: #FF6666;

  border-radius:20rpx;  

  padding: 10rpx;
 
  font-size: 14px;
 
  margin-top: 10rpx;
 
  color: white;
 
  float: right;
 
  position: static;
 
}
 

 
.invisible_model{
 
  position: fixed;
 
  width: 100vw;
 
  height: 100vh;
 
  top: 0;
 
  bottom: 0;
 
}